{
    "compilerOptions": {
        "resolveJsonModule": true,
        "outDir": "dist/",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": false,
        "declaration": true,
        "emitDeclarationOnly": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "stripInternal": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true
    },
    "exclude": [
        "dist/*",
        "node_modules/*"
    ]
}